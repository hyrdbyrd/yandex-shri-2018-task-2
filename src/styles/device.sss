.device-info
    cursor: pointer
    width: calc($device-width - 2 * $device-padding)
    height: calc($device-height - 2 * $device-padding)
    background: $device-bgColor
    display: flex
    flex-direction: column
    justify-content: flex-end
    padding: $device-padding
    border-radius: $device-borderRadius
    margin: 0 $device-margin $device-margin 0
    transition: 0.1s all linear
    &::before
        content: ''
        display: block
        $s: 24px
        position: relative
        background-position: 0 0
        background-size: 100% 100%
        background-repeat: no-repeat
        min-width: $s
        min-height: $s
        width: $s
        height: $s
        margin-bottom: 32px
    &:hover
        background: $color-white
        box-shadow: 0 2px 6px 0 $color-shadow

.device__task
    font-size: 12px
    color: $color-text-gray
    font-weight: 500

.device-info_sun_dactive
    &::before
        background-image: url('./../images/i_sun_dactive.svg')

.device-info_sun_active
    &::before
        background-image: url('./../images/i_sun_active.svg')

.device-info_sun_w_max
    &::before
        background-image: url('./../images/i_sun_w_max.svg')

.device-info_sun_w_min
    &::before
        background-image: url('./../images/i_sun_w_min.svg')

.device-info_temperature_active
    &::before
        background-image: url('./../images/i_temperature_active.svg')

.device-info_temperature_dactive
    &::before
        background-image: url('./../images/i_temperature_dactive.svg')

.device-info_scheduled
    &::before
        background-image: url('./../images/i_scheduled.svg')