@import 'content.sss'

$device-padding: 14px
$device-width: 200px
$device-height: 120px
$device-borderRadius: 20px
$device-margin: 15px
$device-bgColor: $color-lightGray
$part-height: calc(($device-height + $device-margin) * 2 + $board-padding)
$device-height-grid-parsed: calc(100px - $device-padding * 2)

.navigation-list_grid
    flex-direction: row
    flex-wrap: nowrap
    overflow-x: scroll
    overflow-y: hidden
    .device-info
        height: $device-height-grid-parsed
        &::before
            margin-bottom: 16px
    &::-webkit-scrollbar
        height: 0 // 5px
        background: rgba(0, 0, 0, 0)
    &::-webkit-scrollbar-thumb
        border-radius: 20px
        background: rgba(51, 51, 51, .2)
    &::-webkit-scrollbar-button
        height: 2px

.navigation-list-block
    margin-right: 33.333333333%
    height: calc(($device-height-grid-parsed + $device-padding * 2 + $device-margin) * 3 - $device-margin)
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    min-width: calc(($device-width + $device-margin) * 3)

.arrows
    transition: all 0.2s linear
    height: calc($device-borderRadius * 2)
    width: $device-width
    position: absolute
    background: $device-bgColor
    z-index: 100
    border-radius: $device-borderRadius $device-borderRadius 0 0
    margin-top: $part-height
    &::before
        content: ''
        display: block
        background: url('./../images/arrow_top_double.svg') no-repeat 0 0
        $s: 16px
        background-size: $s $s
        width: $s
        height: $s
        margin: 15px auto
    &_hidden
        opacity: 0

.board-part_right
    height: calc($part-height + $device-height / 3)
    margin-right: -10px
    padding-right: 5px
    overflow-x: hidden
    overflow-y: scroll  
    &::-webkit-scrollbar
        width: 5px
        background: rgba(0, 0, 0, 0)
    &::-webkit-scrollbar-thumb
        border-radius: $device-borderRadius
        background: rgba(51, 51, 51, .2)
    &::-webkit-scrollbar-button
        height: $device-borderRadius
    .device-info
        &:first-child
            margin-top: $board-padding
        &:last-child
            margin-bottom: calc($device-margin * 3)

